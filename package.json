{
  "name": "repaint",
  "version": "0.0.1",
  "description": "A little framework for neat pages",
  "main": "index.js",
  "scripts": {
    "start": "http-server .",
    "test": "mocha *.test.js --reporter spec",
    "build": "mkdir -p .dist && watchify -o .dist/bundle.js -v -d index.js",
    "build-hello-example": "mkdir -p .dist && watchify -o .dist/hello-example.js -v -d examples/hello.js",
    "build-quadrants-example": "mkdir -p .dist && watchify -o .dist/quadrants-example.js -v -d examples/quadrants.js"
  },
  "dependencies": {
    "eventemitter-rx": "^1.0.0",
    "react-dom": "^15.3.2",
    "react-redux": "^4.4.5",
    "redux": "^3.6.0",
    "rx": "^4.1.0"
  },
  "devDependencies": {
    "adopt": "0.0.4",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babelify": "^7.3.0",
    "chai": "3.5.0",
    "chai-spies": "0.7.1",
    "mocha": "^2.5.1",
    "testem": "1.2.2",
    "watchify": "^3.7.0"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "react"
          ]
        }
      ]
    ]
  }
}
